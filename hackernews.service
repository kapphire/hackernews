[Unit]
Description=Gunicorn instance to serve Hackernews app
After=network.target

[Service]
User=root
Group=www-data
WorkingDirectory=/root/hackernews
Environment="PATH=/root/.local/share/virtualenvs/vxai-KfrHmZkv/bin"
ExecStart=/root/.local/share/virtualenvs/vxai-KfrHmZkv/bin/gunicorn -w 1 -k uvicorn.workers.UvicornWorker app.main:app

[Install]
WantedBy=multi-user.target